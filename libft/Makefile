# **************************************************************************** #
#                                VARIABLES                                     #
# **************************************************************************** #

NAME        = libft.a
CC          = gcc
CFLAGS      = -Wall -Wextra -Werror
AR          = ar rcs
RM          = rm -f
MAKEFLAGS	+= -s

SRC_DIR     = src
OBJ_DIR     = obj

SRCS        = $(wildcard $(SRC_DIR)/*.c)
OBJS        = $(patsubst $(SRC_DIR)/%.c, $(OBJ_DIR)/%.o, $(SRCS))

# **************************************************************************** #
#                                  RULES                                       #
# **************************************************************************** #

all: $(NAME)
	@echo " ü…™ ôÍú∞·¥õ ·¥Ñ·¥è·¥ç·¥ò…™ ü·¥á·¥Ö ·¥Ä…¥·¥Ö Íú±·¥ú·¥ç·¥ç·¥è…¥·¥á·¥Ö ·¥ò Ä·¥á·¥ò·¥Ä Ä·¥á Íú∞·¥è Ä  Ä·¥á·¥úÍú±·¥á \n"

$(NAME): $(OBJS)
	@$(AR) $@ $^

$(OBJ_DIR)/%.o: $(SRC_DIR)/%.c
	@mkdir -p $(OBJ_DIR)
	@$(CC) $(CFLAGS) -Iincludes -c $< -o $@

clean:
	@$(RM) -rf $(OBJ_DIR)
	@echo "üßΩ  ·¥è ô·¥ä·¥á·¥Ñ·¥õ Íú∞…™ ü·¥áÍú± ·¥†·¥Ä…¥…™Íú± ú·¥á·¥Ö. ·¥õ ú·¥á Íú∞·¥è Ä…¢·¥á …™Íú± ·¥Ñ ü·¥á·¥Ä…¥."

fclean: clean
	@$(RM) $(NAME)
	@echo "üíÄ $(NAME) Íú±·¥Ä·¥Ñ Ä…™Íú∞…™·¥Ñ·¥á·¥Ö ·¥õ·¥è ·¥õ ú·¥á  ô…™…¥·¥Ä Ä è …¢·¥è·¥ÖÍú± Íú∞·¥Ñ ü·¥á·¥Ä…¥ ·¥Ñ·¥è·¥ç·¥ò ü·¥á·¥õ·¥á."

re: fclean all
	@echo "üîÅ  ü…™ ôÍú∞·¥õ  Ä·¥á ô·¥è Ä…¥  Ä·¥á·¥Ñ·¥è·¥ç·¥ò…™ ü·¥á·¥Ö Íú∞ Ä·¥è·¥ç ·¥ÄÍú± ú·¥áÍú±."


.PHONY: all clean fclean re
